<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.litit.timeleft.SettingsController">
    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Label text="End date:" />
        <DatePicker fx:id="datePicker" />
        <FontIcon iconLiteral="fas-check-circle" iconSize="20" onMouseClicked="#passDate"/>
    </HBox>
    <Label fx:id="errorLabel" visible="false" textFill="red" style="-fx-padding: -15 0 0 0;"/>
</VBox>